class Solution {
    public boolean searchMatrix(int[][] matrix, int target) {
       int n=matrix.length;
       int m=matrix[0].length;
        int left=0;
        int right=(n*m)-1;
      
        while(left<=right){
            int mid=(left+(right-left)/2);
            int r= mid/m;
            int c=mid%m;

            if(matrix[r][c]==target){
                return true;
            }
            else if(matrix[r][c]>target){
                right--;
            }
            else{
                left++;
            }

        }

        return false;
        
    }
}
